<!DOCTYPE html>
<html>
<head>
<script src="http://maps.googleapis.com/maps/api/js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">


<style>
.top-buffer { margin-top:20px; }
</style>
</head>

<body>

<input id=client name="client" type="hidden" value="<%=client%>">
<input id=building name="building" type="hidden" value="<%=building%>">

<div id="divlink" ng-controller="ClientMenuController"
	style="width: 1200px; height: 20px; float: left; background-color: GREEN;">
<table class="table table-striped" style="font-family: fantasy;"><tr>
		<td>
	<a style="padding-left: 10px; color: White;"
		class="glyphicon glyphicon-home" href="#">Home</a>
		</td>
		<td> 
	<a	style="padding-left: 10px; color: White;"
		class="glyphicon glyphicon-warning-sign" href="#">View-Alerts</a>
		</td>
		<td> 
	<a	style="padding-left: 10px; color: White;"  ng-click="ViewBuildingReports()"
		class="glyphicon glyphicon-file" href="#">View-Building-Reports</a>
		</td>
		<td> 
	<a	style="padding-left: 10px; color: White;"
		class="glyphicon glyphicon-file" href="#">View-Consolidated-Report</a>
		</td>
		<td>
	<a style="padding-left: 10px; color: White;"
		class="glyphicon glyphicon-file" href="#">Search-Report</a>
		</td>
		<td>
	<a style="padding-left: 10px; color: White;"
		class="glyphicon glyphicon-file" href="#">Building</a>
		</td>
</tr></table>
</div>
<br><br>
	<form class="form-horizontal" action="" id="editBuilding">
		<div class="form-group">
		<div align="center"><h3>Client Id: <%=client%> Building Id: <%=building%></h3></div>
			<br>
			<div class="col-md-6 col-md-offset-3">
				<div align="center">
					<h3 style="font-style: italic;" align="left">Edit Building Details:</h3>
					<table border="0" width="70%"
						class="table table-hover table-striped">
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point1 X Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="x1"
								class="form-control" id="x1"><%=x1%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point1 Y Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="y1"
								class="form-control" id="y1"><%=y1%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point2 X Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="x2"
								class="form-control" id="x2"><%=x2%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point2 Y Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="y2"
								class="form-control" id="y2"><%=y2%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point3 X Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="x3"
								class="form-control" id="x3"><%=x3%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point3 Y Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="y3"
								class="form-control" id="y3"><%=y3%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point4 X Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="x4"
								class="form-control" id="x4"><%=x4%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								Point4 Y Co-Ordinate:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="y4"
								class="form-control" id="y4"><%=y4%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;" ><b>
								ADDRESS:
							</b></td>
							<td>
								<textarea style="height: 75px; width: 100%;  font-size: medium; font-weight: bold;" name="address"
								class="form-control" id="address" readonly="readonly"><%=address%></textarea>						
							</td>
						</tr>
						<tr>
							<td style="font-family: monospace; font-size: x-large;"><b>
								FEE:
							</b></td>
							<td>
								<textarea style="height: 35px; width: 100%; font-size: medium; font-weight: bold;" name="fee"
								class="form-control" id="fee"><%=fee%></textarea>						
							</td>
						</tr>
						
						
					</table>
					<br>
					<br>
				</div>
				
			</div>
		</div>
				
		<div align="center" style="font-family: cursive; font-size: medium;">
		<button class="btn btn-primary glyphicon glyphicon-refresh" type="submit"
	    onclick="updateBuilding()"> Update Details
	    </button><br><br>
		<button class="btn btn-primary glyphicon glyphicon-backward" type="submit"
	    onclick="goBack()"> Go Back to Buildings HomePage
	    </button>
	    <br><br><br>
	</form>
	
	
	
<script type="text/javascript">

form = document.getElementById("editBuilding");

function updateBuilding(){

	client=document.getElementById("client").value;
	building=document.getElementById("building").value;
	if(isNaN(document.getElementById("fee").value)){
			alert(document.getElementById("fee").value);
			
	}
	else{
	form.action="/updateBuilding?client="+client+"&building="+building;
	form.method="post";
	form.submit();
	}
}

function goBack(){
	form.action="/building";
	form.method="get";
	form.submit();
}


</script>

</body>
</html>
